<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CDUINo2" x:Class="CDUINo2.MainWindow"
        Title="MainWindow" Height="350" Width="880.821">
    <Grid>
        <DataGrid x:Name="CdDataGrid" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="36,75,0,0" VerticalAlignment="Top" Height="210" Width="695">
        </DataGrid>
        <Button x:Name="FindCd" Content="Find CD" HorizontalAlignment="Left" Margin="766,36,0,0" VerticalAlignment="Top" Width="75" Click="FindCDClick"/>
        <Button x:Name="AddCd" Content="Add CD" HorizontalAlignment="Left" Margin="766,75,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="DeleteCD" Content="Delete CD" HorizontalAlignment="Left" Margin="766,116,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="ListCds" Content="List CDs" HorizontalAlignment="Left" Margin="766,155,0,0" VerticalAlignment="Top" Width="75" Click="ClickListCds"/>
        <TextBox x:Name="SearchText" HorizontalAlignment="Left" Height="23" Margin="466,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="265"/>
    </Grid>
</Window>
